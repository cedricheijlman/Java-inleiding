// getallen 1 tot 7 omzetten naar dagen van de week

// variabele dag nummer
int dag = 7;

// getallen 1 tot 7 omzetten naar dagen van de week
switch(dag){
  case 1:
    println("Maandag");
    break;
  case 2:
    println("Dinsdag");
    break;
  case 3:
    println("Woensdag");
    break;
  case 4:
    println("Donderdag");
    break;
  case 5:
    println("Vrijdag");
    break;
  case 6:
    println("Zaterdag");
    break;
  case 7:
    println("Zondag");
    break;
  default:
    println("Dit dag bestaat niet");
}
